<style>
 :root {
  --main-font-size: 22px;
  }

  @media screen and (max-width: 750px) {


   .form-row {
    display: flex;
    flex-direction: column;
    padding: .5em;
   }
   
   .registration__form {
     margin: 0 10px;
   }

   .registration__header {
      flex-direction: column !important;
      margin-top: 20px !important;
    }

    .registration__logo {
      max-width: 80% !important;
    }
  
    .registration__heading {
      margin: 0 auto !important;
      margin-top: 15px !important;
      font-size: 1.5rem !important;
    }

    .registration__note {
      margin: 0 10px;
    }

    .form-row > button {
     
    
      margin-top: 5px !important;
      font-size:  18px !important;
   
    }
  }
  .registration__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .registration__header {
   
    margin-top: 20%;
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
  }

  .registration__logo{
    max-width: 50%;
    height: auto;
  }

  .registration__heading {
    color: rgba(75, 79, 81, .8);
    font-size: 2rem;
    align-self: flex-end;
    margin-left: auto; 
    text-transform: uppercase;
  }

    .wrapper {
    margin-top: 20px;
    list-style-type: none;
    padding: 0;
    border-radius: 3px;
  }
  .form-row {
    display: flex;
    justify-content: flex-end;
    padding: .5em;
  }
  .form-row > label {
    color: rgba(75, 79, 81, .8);
    font-size: var(--main-font-size);
    flex: 1;
  }
  .form-row > input {
    flex: 3;
    border: none;
    background-color: rgba(91, 159, 204, .1);
    color: rgba(75, 79, 81, .8);
    font-size: var(--main-font-size);
   
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom: 1px solid rgba(75, 79, 81, .2);  
  }

  form input[type=text] {
    text-transform: capitalize;
  }

  form input[type=email] {
    text-transform: lowercase;
  }

  .form-row > input,
  .form-row > button {
    padding: .2em;
    flex: 3;
  }
  .form-row > button {
   background: gray;
   color: white;
   border: 0;
   margin-top: 10px;
   font-size: var(--main-font-size);
   border-radius: 3px;
   transition: all .2s;
  }
  .form-row > button:hover {
    cursor: pointer;
    background-color: #726767;
  }

  .registration__note {
    text-align: center;
  }
</style>


<div id="registration">
  <div class="registration__container">
    <div class="registration__header">
      <img src="/img/aeslogo.png" alt="Alternative Energy Systems Logo" class="registration__logo">
      <h1 class="registration__heading">PG&E Share My Data</h1>
    </div>
   <hr>
   <div class="registration__form">
     <form action="/customer/registration" method="post">
      <ul class="wrapper">
        <li class="form-row">
          <label for="first_name">First Name</label>
          <input type="text" id="first_name" name="first_name" required>
        </li>
        <li class="form-row">
          <label for="last_name">Last Name</label>
          <input type="text" id="last_name" name="last_name" required>
        </li>
        <li class="form-row">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" required>
        </li>
        <li class="form-row">
          <button type="submit">Submit</button>
        </li>
      </ul>
    </form>

    <div class="registration__note">
      <p>Note: Once the submit button has been clicked you will be redirected to www.pge.com. Please have your PG&E account login information ready.</p>
    </div> 

   </div>
  </div>
</div>